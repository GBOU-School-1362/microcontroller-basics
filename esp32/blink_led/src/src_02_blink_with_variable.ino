// Пример 2: Используем переменную для управления скоростью мигания

#define LED_PIN 2

// Задаём переменную для хранения времени задержки между миганиями.
int blinkDelay = 300; // миллисекунд

void setup() {
  pinMode(LED_PIN, OUTPUT);
}

void loop() {
  digitalWrite(LED_PIN, HIGH);
  delay(blinkDelay); // Используем переменную вместо числа!
  digitalWrite(LED_PIN, LOW);
  delay(blinkDelay);

  // Почему так? Вместо “жёстко” заданного числа используем переменную.
  // Так удобнее менять параметры работы программы — просто меняем значение переменной.
  // Это учит вас использовать переменные для управления поведением программы.
}
// Пример 4: Используем цикл и переменную-счетчик

#define LED_PIN 2
int blinkCount = 5; // Сколько раз мигнуть

void setup() {
  pinMode(LED_PIN, OUTPUT);
}

void loop() {
  // Используем цикл for — повторяем действия несколько раз подряд.
  for (int i = 0; i < blinkCount; i++) {
    digitalWrite(LED_PIN, HIGH);
    delay(200);
    digitalWrite(LED_PIN, LOW);
    delay(200);
  }

  delay(2000); // Длинная пауза между сериями миганий

  // Почему так? Тут мы знакомимся с циклами и переменными-счетчиками (i).
  // Это нужно, чтобы повторять действия определённое количество раз.
  // Например, можно делать серию миганий по сигналу.
}
// Пример 11: Мигающий светодиод с использованием массива и цикла for

/*
  Здесь мы создаем массив из трёх пинов для светодиодов.
  С помощью цикла for включаем и выключаем каждый светодиод по очереди.
*/

int ledPins[3] = {2, 4, 15}; // Массив номеров пинов для светодиодов

void setup() {
  // Настраиваем каждый пин на выход с помощью цикла
  for (int i = 0; i < 3; i++) {
    pinMode(ledPins[i], OUTPUT);
  }
}

void loop() {
  // Включаем светодиоды по очереди
  for (int i = 0; i < 3; i++) {
    digitalWrite(ledPins[i], HIGH); // Включаем текущий светодиод
    delay(300);
    digitalWrite(ledPins[i], LOW);  // Выключаем текущий светодиод
    delay(100);
  }
}